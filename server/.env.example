# Server Environment Variables
# Copy this file to .env and fill in your values

# Server Port (default: 3001)
PORT=3001

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/kaam247
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/kaam247
MONGO_URI=mongodb://localhost:27017/kaam247

# JWT Secret Key (use a strong random string in production)
JWT_SECRET=your-secret-key-change-this-in-production

# Firebase Admin SDK Configuration (for Phone OTP Authentication)
# Get these from Firebase Console > Project Settings > Service Accounts
# Option 1: Use environment variables (recommended)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Option 2: Use service account JSON file path (alternative)
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/serviceAccountKey.json
