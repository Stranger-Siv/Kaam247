# Server Environment Variables
# Copy this file to .env and fill in your values

# Server Port (default: 3001)
PORT=3001

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/kaam247
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/kaam247
MONGO_URI=mongodb://localhost:27017/kaam247

# JWT Secret Key (required in production; min 32 characters; use a strong random string)
JWT_SECRET=your-secret-key-change-this-in-production
